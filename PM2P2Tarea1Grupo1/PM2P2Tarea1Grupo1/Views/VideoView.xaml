<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2P2Tarea1Grupo1.Views.VideoView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ejercicio 2.1 PM2Grupo1"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                   TextColor="Black" 
                   FontSize = "30"/>

            <Button x:Name="btngrabar" Text="Grabar" Clicked="btngrabar_Clicked" />
            <Button x:Name="btnsalvar" Text="Guardar video" Clicked="btngrabar_Clicked"/>
            <Label x:Name="statusLabel" HorizontalTextAlignment="Center" />
            <MediaElement x:Name="mediaElement" Aspect="AspectFit" VerticalOptions="CenterAndExpand"
                      HorizontalOptions="CenterAndExpand" HeightRequest="300" WidthRequest="300"
                      />
        </StackLayout>

    </ContentPage.Content>

</ContentPage>